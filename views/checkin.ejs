<%- include ('partials/header') %>

<div class="container">
  <div class="jumbotron" style="padding-top: 20px;padding-bottom: 20px;margin-top: 40px;opacity: 0.8;">
    <form style="padding-top: 25px; padding-bottom: 30px;" action="/" method="POST">
      <div class="row">
        <div class="col">
          <h1 class="display-4"> Visitor Details</h1>
          <div class="form-group">
            <label>Name</label>
            <input name="vname" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter name" required>
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input name="vemail" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>

          <div class="form-group">
            <label>Phone No.</label>
            <input name="vphone" type="tel" class="form-control" placeholder="Phone No." required>
          </div>
        </div>
        <div class="col">
          <h1 class="display-4"> Host Details</h1>
          <div class="form-group">
            <label>Name</label>
            <input name="hname" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter name" required>
          </div>

          <div class="form-group">
            <label for="exampleInputEmail1"> Email Address</label>
            <input name="hemail" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
              placeholder="Enter email" required>
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
          </div>


          <div class="form-group">
            <label>Phone No.</label>
            <input name="hphone" type="tel" class="form-control" placeholder="Phone No." required>
          </div>
        </div>
      </div>
      <br>
      <div style="text-align: center;">
        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
      </div>
    </form>
  </div>
</div>
<%- include ('partials/footer') %>